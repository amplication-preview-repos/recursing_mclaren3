datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Sale {
  id               String    @id @default(cuid())
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  date             DateTime?
  clientTelegramId Int?
  user             User?     @relation(fields: [userId], references: [id])
  userId           String?
}

model User {
  id         String   @id @default(cuid())
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  firstName  String?
  lastName   String?
  username   String   @unique
  email      String?  @unique
  password   String
  roles      Json
  telegramId Int?
  sales      Sale[]
}
